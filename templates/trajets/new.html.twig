{% extends 'base.html.twig' %}

{% block title %}Votre nouveau trajet{% endblock %}

{% block body %}

    {% if user is defined and user is not null and user.vehicule %}
        <!-- contenu de la page que si l'utilisateur est connecté et possède une voiture -->

       <div class = "container-fluid">
        <div class="row justify-content-center">
            </hr>
            <div class="col-md-3"> <!-- Volets de navigation -->
                {% include 'partials/_sidebar.html.twig' %}
            </div>

            <div class="col-md-9">
                <div class="container justify-content-center">
                    <h1 class="mb-4">Ajouter un trajet</h1>

       {% if app.flashes('error') is not empty %}
           <div class="alert alert-danger">
               <p>Vous avez déjà créé un trajet pour cette date. Veuillez choisir une autre date</p>
           </div>
       {% endif %}
       {% if app.flashes('errordate') is not empty %}
           <div class="alert alert-danger">
               <p>Vous avez un trajet prévu à cette péridode.</p>
           </div>
       {% endif %}
                    <hr>

         {{ form_start(form) }}

       
        {#   Champ inutile à la création - le trajet est forcément de statut ouvert
            <div class= 'form-group'>
            {{ form_label(form.etat)}}
            {{ form_widget(form.etat)}}
            <div>
                {{form_errors(form.etat)}}
            </div>
            </div>
            #}
        
        <div class= 'form-group'>
            {{ form_label(form.T_depart)}}
            {{ form_widget(form.T_depart)}}
            <div>
                {{form_errors(form.T_depart)}}
            </div>
        </div>

        <div class= 'form-group'>
            {{ form_label(form.T_arrivee)}}
            {{ form_widget(form.T_arrivee)}}
            <div>
                {{form_errors(form.T_arrivee)}}
            </div>
        </div>
   
        <div class= 'form-group'>
            {{ form_label(form.demarrea)}}
            {{ form_widget(form.demarrea)}}
            <div>
                {{form_errors(form.demarrea)}}
            </div>
        </div>
      
        <div class= 'form-group'>
            {{ form_label(form.arrivea)}}
            {{ form_widget(form.arrivea)}}
            <div>
                {{form_errors(form.arrivea)}}
            </div>
        </div>

                        <div class="form-group col-md-4">
                            {{ form_label(form.groupes) }}
                            {{ form_widget(form.groupes, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.groupes) }}</div>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.renseignement) }}
                        {{ form_widget(form.renseignement, {'attr': {'class': 'form-control'}}) }}
                        <div class="text-danger">{{ form_errors(form.renseignement) }}</div>
                    </div>

                    <div class="form-row justify-content-center">
                        <div class="form-group col-md-4">
                            <button class="btn btn-primary">{{ button_label|default('Enregistrer ce nouveau trajet') }}</button>
                            {{ form_end(form) }}
                        </div>
                        <div class="form-group col-md-4">
                            <a href="{{ path('app_trajets_index') }}" class="btn btn-secondary">Retour à la liste de vos trajets</a>
                        </div>
                    </div> 
                </div>
            </div>


    {% else %}
        <p>Vous devez posséder une voiture pour accéder à cette page.</p>
    {% endif %}
    

    <script>
    const publicField = document.querySelector('#form_public');
    const groupesContainer = document.querySelector('.form-group');

    publicField.addEventListener('change', function() {
        if (publicField.checked) {
            groupesContainer.classList.add('groupes-hidden');
            groupesContainer.classList.remove('groupes-visible');
        } else {
            groupesContainer.classList.add('groupes-visible');
            groupesContainer.classList.remove('groupes-hidden');
        }
    });
</script>

{% endblock %}
