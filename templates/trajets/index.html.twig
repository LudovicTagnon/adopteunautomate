{% extends 'base.html.twig' %}

{% block title %}Mes trajets{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container mt-4">

</div>

    <h1>Liste de vos trajets</h1>


    <div class="container">
        {# flash message si succes#}
        {% for message in app.flashes('succes')  %}
            <div class= "alert alert-success mt-4">
                {{message}}
            </div>
        {% endfor  %}
    </div>

    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Etat</th>
                    <th>Date de départ</th>
                    <th>Date d'arrivee</th>
                    <th>Ville de départ</th>
                    <th>Ville d'arrivee</th>
                    <th>Prix</th>
                    <th>Nb de passager</th>
                    <th>Places restantes</th>
                    <th>Public</th>
                    <th>Renseignements</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for trajet in trajets %}
                <tr>
                    <td>{{ trajet.id }}</td>
                    <td>{{ trajet.etat }}</td>
                    <td>{{ trajet.TDepart ? trajet.TDepart|date('Y-m-d H:i') : '' }}</td>
                    <td>{{ trajet.TArrivee ? trajet.TArrivee|date('Y-m-d H:i') : '' }}</td>
                    
                    <td>{{ trajet.demarrea.nomville }}</td>
                     <td>{{ trajet.arrivea.nomville }}</td>
                    
                    <td>{{ trajet.prix }}</td>
                    <td>{{ trajet.nbPassagerMax }}</td>
                    <td>{{ trajet.nbPassagerMax - trajet.nbPassagerCourant }}</td>
                    <td>{{ trajet.public ? 'Yes' : 'No' }}</td>
                    <td>{{ trajet.renseignement }}</td>
                    <td>
                    {# cacher les boutons des voyages ne pouvant être modifiés#}
                    {#
                        <a href="{{ path('app_trajets_show', {'id': trajet.id}) }}"class= "btn btn-info">Montrer les villes</a>
                    #}
                    {#
                    {% set now = date_create() %}#}
                    {% set now = date() %}
                    {% if (trajet.TDepart  > now|date_modify('+24 hours'))  %}
                        <a href="{{ path('app_trajets_edit', {'id': trajet.id}) }}"class= "btn btn-info">Modifier</a>
                        <a href="{{ path('app_trajets_delete', {'id': trajet.id}) }}"class= "btn btn-info">Supprimer</a>
                    {% endif %}

                    {% set hier = date('-24 hours') %}
                    {% set avanthier = date('-48 hours') %}
                    {% set demain = date('+24 hours') %}
                    {% if ((trajet.getTArrivee() is not null and trajet.getTArrivee() < now and trajet.getTArrivee() > hier ) or ( trajet.getTDepart() < hier and (trajet.getTDepart() > avanthier )) ) %}
                     <!-- si trajet terminé, le chauffeur peut l'indiquer , cela permettra à la notation de commencer -->
                    
                    <a href="{{ path('app_trajets_edit', {'id': trajet.id}) }}"class= "btn btn-info">Trajet terminé</a>
                    {% endif %}

                    <a href="{{ path('app_trajets_show', {'id': trajet.id}) }}"class= "btn btn-info">Voir les détails</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="10">Aucun trajet enregistré </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    <a href="{{ path('app_trajets_new') }}"class= "btn btn-info" >Ajouter un trajet </a>

    </div>

{% endblock %}
