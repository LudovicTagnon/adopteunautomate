{% extends 'base.html.twig' %}

{% block title %}Rechercher un trajet{% endblock %}

{% block body %}

    <!-- bootstrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <!-- contenu de la page -->
    <div class = "container">
        <br/>
        <!-- Formulaire de recherche -->
            {% include "trajets/search_bar.html.twig" %}
        <!-- Page de résultats -->
        <div class="container"> 
            <br>
            <div class="row">
                <div class="col-4">
                    <!-- Panneau de filtre -->
                    <div class="filter-panel">
                        <h4>Options de tri:</h4>
                        <div class="form-check">
                            <label for="tri_date">Trier par date et heure</label>
                            <input type="radio" name="filtre" id="tri_date" value="tôt" checked>
                        </div>
                        <div class="form-check">
                            <label for="tri_prix">Trier par prix</label>
                            <input type="radio" name="filtre" id="tri_prix" value="moins_cher">
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="row"> 
                        {% if date is null or date|date('d-m-Y') == "now"|date('d-m-Y') %}
                            <h3 class="my-0 font-weight-normal">Aujourd'hui</h3>
                        {% else %}
                            <h3 class="my-0 font-weight-normal">{{date}}</h3>
                        {% endif %}
                    </div>
                    <div class="row"> 
                        {% if depart is null %}
                            <small class="text-muted">non renseigné</small>
                        {% else %}
                            <small class="text-muted">{{depart}}</small>
                        {% endif %}
                        <i class="bi bi-arrow-right-short"></i>
                        {% if arrivee is null %}
                            <small class="text-muted">non renseigné</small>
                        {% else %}
                            <small class="text-muted">{{arrivee}}</small>
                        {% endif %}
                    </div>
                    <div class="row">
                        <small class="text-muted">
                        {{nb_trajets}}
                        {% if arrivee|length <= 1 %}
                            trajet
                        {% else %}
                            trajets
                        {% endif %}
                            disponibles
                        </small>
                    </div>
                    {% if nb_trajets == 0%}
                        Aucun trajet enregistré
                    {% else %}
                        <br/>
                        <ul id="liste_trajets">
                            {% for trajet in trajets %}
                                {% if trajet.publie != utilisateur_actuel%}
                                    {% if trajet.getNbPassagerMax() >  trajet.getNbPassagerCourant()%}
                                        <li style="list-style-type:none">
                                            <div class="row">
                                                <div class="col">
                                                    <div class="row">
                                                        <div class="row">
                                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="row">Le&nbsp;<div class="date_depart">{{trajet.getJourDepartString()}}</div></span>
                                                        </div>
                                                    </div>
                                                    <div class="card mb-12 shadow-sm">
                                                        <div class="card-body">
                                                            <div class="row"> <!-- Info concernant le trajet -->
                                                                <div class="col col-lg-2">
                                                                    <!-- Heure de départ -->
                                                                    <h4 class="my-0 font-weight-normal"><div class="heure_depart">{{trajet.getHeureDepartString()}}</div></h4>
                                                                    <!-- Temps de trajet --> 
                                                                    <small class="text-muted">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{trajet.getTempsTrajetString()}}</small>
                                                                    <br/>
                                                                    <!-- Heure d'arrivée --> 
                                                                    {% if trajet.getHeureArriveeString() == "nr" %}
                                                                        <small class="text-muted">non renseigné</small>
                                                                    {% else %}
                                                                        <h4 class="my-0 font-weight-normal">{{trajet.getHeureArriveeString()}}</h4>
                                                                    {% endif %}
                                                                </div>
                                                                <div class="col-lg-3">
                                                                    <!-- Ville de départ -->
                                                                    <h4 class="my-0 font-weight-normal"> {{trajet.demarrea}} </h4>
                                                                    &nbsp;&nbsp;&nbsp;&nbsp;<i class="bi bi-arrow-down-short"></i>
                                                                    <!-- Ville de d'arrivée' -->
                                                                    <h4 class="my-0 font-weight-normal">{{trajet.arrivea}}</h4>
                                                                </div>
                                                                <div class="col-lg-5">
                                                                    <!-- Description -->
                                                                    <h4 class="my-0 font-weight-normal">Description :</h4>
                                                                    {{trajet.renseignement}}
                                                                </div>
                                                                <div class="col">
                                                                    <!-- Prix et nombre de passager -->
                                                                    <h1 class="card-title pricing-card-title"><span class="prix">{{trajet.prix}}<small class="text-muted">€</small></span></h1>
                                                                    {{trajet.getNbPassagerCourant()}} / {{trajet.getNbPassagerMax()}} places
                                                                </div>
                                                            </div>
                                                            </br>
                                                            <div class="row"> <!-- Info concernant le conducteur -->
                                                                <div class="col col-lg-2">
                                                                     {% if trajet.publie.getFichierPhoto() is not null %}
                                                                    <img src="/uploads/{{trajet.publie.getFichierPhoto()}}" class="rounded-circle" alt="img_profil" width="50" height="50">
                                                                     {% endif%}
                                                                </div>
                                                                <div class="col">
                                                                    {{trajet.publie.nom}} {{trajet.publie.prenom}}<br/>
                                                                    //note à afficher ici
                                                                <div>
                                                            </div>
                                                            </br>
                                                        </div>
                                                        {% set trajet_deja_adopte = false %}
                                                        {% for adoption in utilisateur_actuel.getAdoptions() %}
                                                            {% if adoption.trajet.id == trajet.id %}
                                                                {% set trajet_deja_adopte = true %}
                                                            {% endif %}
                                                        {% endfor %}
                                                        {% if trajet_deja_adopte == false %}
                                                            <button type="button" class="btn btn-lg btn-block btn-primary" onclick="adopterTrajet({{ utilisateur_actuel.id }}, {{ trajet.id }})">Adopter ce trajet</button>
                                                        {% else %}
                                                            <button type="button" class="btn btn-lg btn-block btn-primary" onclick="abandonnerTrajet({{ utilisateur_actuel.id }}, {{ trajet.id }})">Abandonner ce trajet</button>
                                                        {% endif %}
                                                    </div> 
                                                </div>
                                            </div>
                                        </li>
                                    {% endif %}
                                {% endif %}
                                <br/>
                            {% endfor %}
                        </ul>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Système de tri -->
    <script>
        
    </script>

    <!-- Inscription/désinscription d'un trajet -->
    <script>
        function adopterTrajet(utilisateurId, trajetId) {
            var xhr = new XMLHttpRequest();
            xhr.open('GET', '{{ path('app_trajet.adopter_trajet', { trajetId: '__trajetId__' , utilisateurId: '__utilisateurId__' }) }}'.replace('__utilisateurId__', utilisateurId).replace('__trajetId__', trajetId), true);
            xhr.send();
            location.reload();
        }
        function abandonnerTrajet(utilisateurId, trajetId) {
            var xhr = new XMLHttpRequest();
            dump('test');
            xhr.open('GET', '{{ path('app_trajet.abandonner_trajet', { trajetId: '__trajetId__' , utilisateurId: '__utilisateurId__' }) }}'.replace('__utilisateurId__', utilisateurId).replace('__trajetId__', trajetId), true);
            xhr.send();
            location.reload();
        }
    </script>

{% endblock %}