{% extends 'base.html.twig' %}

{% block title %}Rechercher un trajet{% endblock %}

{% block body %}

    <!-- bootstrap-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style> 
        .example-wrapper { margin: 1em auto; max-width: 1000px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <!-- contenu de la page -->
    <div class = "container">
        <br/>
        <div class="container justify-content-center">
            <form method="get" action="{{path('app_trajets_search')}}">
                <div class="form-row align-items-center">
                    <div class="col-sm-3 my-1">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">De</div>
                            </div>
                            <input type="text" class="form-control" name="ville_depart" placeholder="Ville de départ" required value="{{ app.request.query.get('ville_depart') }}">
                        </div>
                    </div>
                    <div class="col-sm-3 my-1">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">à</div>
                            </div>
                            <input type="text" class="form-control" name="ville_arrivee" placeholder="Ville d'arrivée" required value="{{ app.request.query.get('ville_arrivee') }}">
                        </div>
                    </div>
                    <div class="col-sm-3 my-1">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">le</div>
                            </div>
                            <input type="datetime-local" class="form-control" id="date_depart" name="date_depart" min="{{ "now"|date("Y-m-d\\TH:i") }}" required value="{{ app.request.query.get('date_depart') }}">
                        </div>
                    </div>
                        <button class="btn btn-primary" type="submit">Rechercher</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="container"> 
            <br>
            <div class="row">
                <div class="col-4">
                    filtres
                </div>
                <div class="col">
                    <div class="row"> 
                        {% if date is null or date|date('Y-m-d') == "now"|date('Y-m-d') %}
                            <h3 class="my-0 font-weight-normal">Aujourd'hui</h3>
                        {% else %}
                            <h3 class="my-0 font-weight-normal">{{date}}</h3>
                        {% endif %}
                    </div>
                    <div class="row"> 
                        {% if depart is null %}
                            <small class="text-muted">non renseigné</small>
                        {% else %}
                            <small class="text-muted">{{depart}}</small>
                        {% endif %}
                        <i class="bi bi-arrow-right-short"></i>
                        {% if arrivee is null %}
                            <small class="text-muted">non renseigné</small>
                        {% else %}
                            <small class="text-muted">{{arrivee}}</small>
                        {% endif %}
                    </div>
                    <div class="row">
                        <small class="text-muted">
                        {{nb_trajets}}
                        {% if arrivee <= 1 %}
                            trajet
                        {% else %}
                            trajets
                        {% endif %}
                            disponibles
                        </small>
                    </div>
                    {% if nb_trajets == 0%}
                        Aucun trajet enregistré
                    {% else %}
                        <br/>
                        {% for trajet in trajets %}
                            {% if trajet.publie != utilisateur_actuel%}
                                {% if trajet.getNbPassagerMax() >  trajet.getNbPassagerCourant()%}
                                    <li style="list-style-type:none">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="card mb-12 shadow-sm">
                                                    <div class="card-body">
                                                        <div class="row"> <!-- Info concernant le trajet -->
                                                            <div class="col col-lg-2">
                                                                <h4 class="my-0 font-weight-normal">{{trajet.getHeureDepartString()}}</h4>
                                                                <small class="text-muted">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{trajet.getTempsTrajetString()}}</small>
                                                                <br/>
                                                                <h4 class="my-0 font-weight-normal">{{trajet.getHeureArriveeString()}}</h4>
                                                            </div>
                                                            <div class="col-lg-3">
                                                                <h4 class="my-0 font-weight-normal"> {{trajet.demarrea}} </h4>
                                                                &nbsp;&nbsp;&nbsp;&nbsp;<i class="bi bi-arrow-down-short"></i>
                                                                <h4 class="my-0 font-weight-normal">{{trajet.arrivea}}</h4>
                                                            </div>
                                                            <div class="col-lg-5">
                                                                <h4 class="my-0 font-weight-normal">Description :</h4>
                                                                {{trajet.renseignement}}
                                                            </div>
                                                            <div class="col">
                                                                <h1 class="card-title pricing-card-title">{{trajet.prix}} <small class="text-muted">€</small></h1>
                                                            </div>
                                                        </div>
                                                        </br>
                                                        <div class="row"> <!-- Info concernant le conducteur -->
                                                            <div class="col col-lg-2">
                                                                <img src="/uploads/{{trajet.publie.getFichierPhoto()}}" class="rounded-circle" alt="img_profil" width="50" height="50">
                                                            </div>
                                                            <div class="col">
                                                                {{trajet.publie.nom}} {{trajet.publie.prenom}}<br/>
                                                                //note à afficher ici
                                                            <div>
                                                        </div>
                                                        </br>
                                                    </div>
                                                    <button type="button" class="btn btn-lg btn-block btn-primary">Adopter ce trajet</button>
                                                </div> 
                                            </div>
                                        </div>
                                    </li>
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>

    </div>

{% endblock %}