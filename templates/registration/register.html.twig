{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">{{ 'Inscription'|trans }}</div>
                    <div class="card-body">
                        {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control mb-3'} }) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Password',
                            'attr': {'class': 'form-control mb-3'}
                        }) }}
                        {{ form_row(registrationForm.agreeTerms, { 'label_attr': {'class': 'form-check-label'}, 'attr': {'class': 'form-check-input'} }) }}

                        <button type="submit" class="btn btn-primary">{{ 'S\'inscrire'|trans }}</button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
