{% extends 'base.html.twig' %}

{% block title %}Hello NotificationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ '/home/max/cours/adopteauto/adopteunautomate/src/Controller/NotificationController.php'|file_link(0) }}">src/Controller/NotificationController.php</a></code></li>
        <li>Your template at <code><a href="{{ '/home/max/cours/adopteauto/adopteunautomate/templates/notification/index.html.twig'|file_link(0) }}">templates/notification/index.html.twig</a></code></li>
    </ul>
    <ul>
        {% for notification in notifications %}
            <li>
            {{ notification.getMessage() }}

            {% if not notification.isRead() %}
                    <form method="post" action="{{ path('notification_mark_as_read', {'id': notification.getId()}) }}" method="POST">
                        <input type="hidden" name="_method" value="PUT">
                        <input type="hidden" name="_token" value="{{ csrf_token('read_notification') }}">
                        <input type="hidden" name="isRead" value="true"> 
                        <button type="submit">Marquer comme lu</button>
                    </form>
                    <form method="post" action="{{ path('delete_notification', {'notification': notification}) }}">
                        <button type="submit">delete</button>
                    </form>
                {% endif %}

            </li>
            
        {% endfor %}
    </ul>
</div>
{% endblock %}
