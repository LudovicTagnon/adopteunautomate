{% extends 'base.html.twig' %}

{% block title %}Hello NotificationController!{% endblock %}

{% block body %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
{% endblock %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Notifications</h1>
    {% if notifications|length == 0 %}
        <p>Aucune notification</p>
    {% else %}
        <ul>
            {% for notification in notifications %} 
                <div class="notifications {% if notification.isRead() %}read-notification{% endif %}">  
                {% if notification.isRead() %}        
                    <li>{{ notification.getMessage() }} (lue)</li>
                    {% if notification.getTypeNotif() == 2 %}  
                        <a href="{{ path('app.estAccepte', {'trajetId': notification.getTrajetQuiEstDemande().id, 'utilisateurId': notification.getUserQuiDemandeTrajet().id,'notificationId': notification.getId()}) }}" class="btn btn-success">Accepter</a>
                        <a href="{{ path('app.estRefuse', {'trajetId': notification.getTrajetQuiEstDemande().id, 'utilisateurId': notification.getUserQuiDemandeTrajet().id,'notificationId': notification.getId()}) }}" class="btn btn-danger">Refuser</a>
                    {% endif %}
                {% else %}
                    <li>{{ notification.getMessage() }}</li>
                    {% if notification.getTypeNotif() == 2 %}
                        {% if notification.getTrajetQuiEstDemande() != null and notification.getUserQuiDemandeTrajet() != null %}
                        <a href="{{ path('app.estAccepte', {'trajetId': notification.getTrajetQuiEstDemande().id, 'utilisateurId': notification.getUserQuiDemandeTrajet().id, 'notificationId': notification.getId()}) }}" class="btn btn-success">Accepter ce passager</a>
                        <a href="{{ path('app.estRefuse', {'trajetId': notification.getTrajetQuiEstDemande().id, 'utilisateurId': notification.getUserQuiDemandeTrajet().id,'notificationId': notification.getId()}) }}" class="btn btn-danger">Refuser ce passager</a>
                        {% endif %}
                    {% endif %}
                    <form action="{{ path('app_mark_notification_as_read', {'id': notification.getId()}) }}" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-primary">Marquer comme lu</button>
                    </form>

                {% endif %}
                <a  href="{{ path('app_supprimer_notif', {'id': notification.getId()}) }}">
                <button class="btn btn-warning" >Supprimer la notification</button> 
                </a>
            </div>
            {% endfor %}
        </ul>
    {% endif %}
</div>
{% endblock %}
