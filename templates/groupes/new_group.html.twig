{% extends 'base.html.twig' %}

{% block title %}Creation de groupe {% endblock %}
{#// PROB7MES de LIENS ET PB de CLE ETRANGERE #}
{% block body %}
<!-- contenu de la page -->
    <div class = "container-fluid">
        <div class="row justify-content-center">
            </hr>
            <div class="col-md-3"> <!-- Volets de navigation -->
                {% include 'partials/_sidebar.html.twig' %}
            </div>
            <style>
                    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
                    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
                </style>



                <div class="example-wrapper">
                        
                <h1>Créer un groupe :</h1>
                <hr/>

                {{ form_start(form) }}

        <div class= 'form-group'>
            {{ form_label(form.nom_groupe)}}
            {{ form_widget(form.nom_groupe)}}
            <div>
                {{form_errors(form.nom_groupe)}}
            </div>
        </div>
        <div class= 'form-group'>
            {{ form_label(form.description)}}
            {{ form_widget(form.description,{'attr':{'value':'Aucune description'}})}}
        </div>
        <div class='form-group'>
            <div>
                {{form_label(form.utilisateurs)}}
                {{form_widget(form.utilisateurs)}}
            </div>
            <div>
                
            </div>
        </div>
        <div class= 'form-group'>
        </br>
            <button type="submit" class="btn btn-primary" style="background-color:blue;">Créer le groupe</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
